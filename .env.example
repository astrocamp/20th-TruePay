DB_NAME=truepay_db
DB_USER=your_username
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# AWS S3 Settings for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name
AWS_S3_REGION_NAME=ap-northeast-1



# =============================================================================
# 郵件服務設定 - 支援 Resend 和 Mailtrap 切換
# =============================================================================

# 郵件服務提供商選擇 ('resend' 或 'mailtrap')
EMAIL_PROVIDER=mailtrap

# Mailtrap 設定 (測試環境推薦)
MAILTRAP_USERNAME=your_mailtrap_username
MAILTRAP_PASSWORD=your_mailtrap_password

# Resend 設定 (正式環境)
RESEND_API_KEY=your_resend_api_key_here

# 使用方式:
# 測試環境: EMAIL_PROVIDER=mailtrap (需要設定 MAILTRAP_USERNAME 和 MAILTRAP_PASSWORD)
# 正式環境: EMAIL_PROVIDER=resend (需要設定 RESEND_API_KEY)



# 藍新金流商店設定
NEWEBPAY_MERCHANT_ID=
NEWEBPAY_HASH_KEY=
NEWEBPAY_HASH_IV=

# 環境設定（development 或 production）
# 先嘗試測試環境，避免產生實際費用
NEWEBPAY_ENVIRONMENT=development


# Ngrok URL 設定（每個開發者使用自己的 ngrok URL）
# 注意：只填寫 domain 部分，不要包含 https://
NGROK_URL=your-unique-ngrok-id.ngrok-free.app

#LINEPAY需放token
LINEPAY_CHANNEL_ID=
LINEPAY_CHANNEL_SECRET=
LINEPAY_API_URL=https://sandbox-api-pay.line.me

#GOOGLE三方登入
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=
